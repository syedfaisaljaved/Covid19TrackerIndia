<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view"
    android:padding="10dp">

    <ImageView
        android:id="@+id/appicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_covid" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/appicon"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Covid19 India Tracker"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/archiabold" />

    <ImageView
        android:id="@+id/sync_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sync" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="-"
                android:id="@+id/total_conf_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:id="@+id/d_conf_widget"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[]"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:fontFamily="@font/archia_semibold_webfont"
                android:textColor="@color/red" />

            <TextView
                android:text="@string/confirmed"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:fontFamily="@font/archia_semibold_webfont" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="-"
                android:id="@+id/total_active_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:id="@+id/d_active_widget"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[]"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:text="Active"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/archia_semibold_webfont" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="-"
                android:id="@+id/total_recovered_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:id="@+id/d_recovered_widget"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[]"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:text="Recovered"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:fontFamily="@font/archia_semibold_webfont" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/total_death_widget"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/d_death_widget"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[]"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:fontFamily="@font/archia_semibold_webfont" />

            <TextView
                android:textColor="@color/white"
                android:text="Deceased"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/archia_semibold_webfont" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>