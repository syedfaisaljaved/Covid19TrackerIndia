<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Maharatra"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:singleLine="true"
            android:background="@drawable/rounded_corner"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/white_85"
            android:fontFamily="@font/archiabold" />

        <LinearLayout
            android:id="@+id/ll_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:background="@drawable/rounded_corner"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/d_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="10sp"
                android:fontFamily="@font/archiamedium"/>

            <TextView
                android:textColor="@color/white_95"
                android:id="@+id/tv_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="4512"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/archiamedium"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>